{
  "name": "cachemcclure-website",
  "type": "module",
  "version": "0.1.0",
  "description": "Modern author website for sci-fi author Cache McClure",
  "author": "Cache McClure <cache.mcclure@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cachemcclure/cachemcclure_website.git"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build && pagefind --site dist && cp -r dist/pagefind public/",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "playwright test",
    "test:header": "playwright test tests/header.spec.ts",
    "test:footer": "playwright test tests/footer.spec.ts",
    "test:book-card": "playwright test tests/book-card.spec.ts",
    "test:news-card": "playwright test tests/news-card.spec.ts",
    "test:buy-links": "playwright test tests/buy-links.spec.ts",
    "test:seo": "playwright test tests/seo.spec.ts",
    "test:typography": "playwright test tests/typography.spec.ts",
    "test:global-styles": "playwright test tests/global-styles.spec.ts",
    "test:images": "playwright test tests/image-optimization.spec.ts",
    "test:icons": "playwright test tests/icons.spec.ts",
    "test:dark-mode": "playwright test tests/dark-mode.spec.ts",
    "test:responsive": "playwright test tests/responsive/",
    "test:keyboard": "playwright test tests/keyboard-navigation.spec.ts",
    "test:heading": "node tests/heading-hierarchy.test.mjs",
    "test:contrast": "node tests/color-contrast.test.mjs",
    "test:themes": "node tests/color-contrast-validator.mjs",
    "test:loads": "playwright test tests/page-loads.spec.ts",
    "test:build": "node tests/build.test.mjs",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:debug": "playwright test --debug"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.10",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/vite": "^4.1.11",
    "astro": "^5.12.0",
    "dayjs": "^1.11.13",
    "lodash.kebabcase": "^4.1.1",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "satori": "^0.15.2",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@pagefind/default-ui": "^1.3.0",
    "@playwright/test": "^1.56.1",
