---
export interface Props {
  id?: string;
  href: string;
  class?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
}

const {
  id,
  href,
  class: className = "",
  ariaLabel,
  title,
  disabled = false,
} = Astro.props;

// Check if link is external (starts with http:// or https://)
const isExternal = href.startsWith("http://") || href.startsWith("https://");
const targetAttr = isExternal ? "_blank" : undefined;
const relAttr = isExternal ? "noopener noreferrer" : undefined;
---

{
  disabled ? (
    <span
      id={id}
      role="link"
      tabindex="-1"
      class:list={["group inline-block", className]}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      id={id}
      {href}
      class:list={["group inline-block hover:text-accent", className]}
      aria-label={ariaLabel}
      title={title}
      target={targetAttr}
      rel={relAttr}
    >
      <slot />
    </a>
  )
}
