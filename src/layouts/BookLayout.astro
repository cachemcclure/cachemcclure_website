---
import { ClientRouter } from "astro:transitions";
import { PUBLIC_GOOGLE_SITE_VERIFICATION } from "astro:env/client";
import { SITE } from "@/config";
import SEO from "@/components/SEO.astro";
import "@/styles/global.css";

export interface Props {
  title?: string;
  author?: string;
  profile?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  pubDatetime?: Date;
  scrollSmooth?: boolean;
  // Book-specific props
  isbn?: string;
  series?: string;
  seriesOrder?: number;
  status?: string;
  buyLinks?: Array<{ name: string; url: string }>;
  reviews?: Array<{ quote: string; attribution: string }>;
  coverImage?: string;
}

const {
  title,
  author,
  profile,
  description,
  ogImage,
  canonicalURL,
  pubDatetime,
  scrollSmooth = false,
  // Book-specific
  isbn,
  series,
  seriesOrder,
  status,
  buyLinks = [],
  reviews = [],
  coverImage,
} = Astro.props;
---

<!doctype html>
<html
  dir={SITE.dir}
  lang=`${SITE.lang ?? "en"}`
  class={`${scrollSmooth && "scroll-smooth"}`}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Preconnect to Google Fonts for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preload Google Fonts CSS for faster font discovery -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap&subset=latin"
    />

    <!-- Load Space Grotesk for headings and JetBrains Mono for code -->
    <!-- Using font-display: swap for optimal performance -->
    <!-- Latin subset reduces file size by ~40% (sufficient for English content) -->
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap&subset=latin"
      rel="stylesheet"
    />

    <!-- SEO Meta Tags (centralized) -->
    <SEO
      title={title}
      description={description}
      author={author}
      profile={profile}
      ogImage={ogImage}
      canonicalURL={canonicalURL}
      pubDatetime={pubDatetime}
      type="book"
      isbn={isbn}
      series={series}
      seriesOrder={seriesOrder}
      status={status}
      buyLinks={buyLinks}
      reviews={reviews}
      coverImage={coverImage}
    />

    <!-- Enable RSS feed auto-discovery -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={SITE.title}
      href={new URL("rss.xml", Astro.site)}
    />

    <meta name="theme-color" content="" />

    {
      PUBLIC_GOOGLE_SITE_VERIFICATION && (
        <meta
          name="google-site-verification"
          content={PUBLIC_GOOGLE_SITE_VERIFICATION}
        />
      )
    }

    <ClientRouter />

    <script is:inline src="/toggle-theme.js"></script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
