---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main
    id="main-content"
    class="mx-auto flex max-w-app flex-1 items-center justify-center px-4"
  >
    <div class="mb-14 flex w-full max-w-2xl flex-col items-center justify-center">
      {/* Error Code */}
      <h1 class="text-9xl font-bold text-accent">404</h1>

      {/* Sci-Fi Themed Message */}
      <p class="mt-6 text-center text-xl font-medium sm:text-2xl">
        Navigation Error: Coordinates Not Found
      </p>
      <p class="mt-2 text-center text-base text-muted sm:text-lg">
        The page you're looking for seems to have drifted into the void.
      </p>

      {/* Navigation Options */}
      <div class="mt-8 w-full">
        <p class="mb-4 text-center text-sm font-medium uppercase tracking-wider text-muted">
          Chart a New Course:
        </p>

        <div class="grid gap-4 sm:grid-cols-2">
          {/* Home Link */}
          <a
            href="/"
            class="group flex flex-col items-center rounded-lg border border-border bg-background p-6 transition-all duration-300 hover:border-accent hover:shadow-lg focus-outline"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-accent transition-transform group-hover:scale-110"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              ></path>
            </svg>
            <span class="mt-3 font-semibold">Home</span>
            <span class="mt-1 text-center text-sm text-muted">Return to base</span>
          </a>

          {/* Books Link */}
          <a
            href="/books"
            class="group flex flex-col items-center rounded-lg border border-border bg-background p-6 transition-all duration-300 hover:border-accent hover:shadow-lg focus-outline"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-accent transition-transform group-hover:scale-110"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              ></path>
            </svg>
            <span class="mt-3 font-semibold">Books</span>
            <span class="mt-1 text-center text-sm text-muted">Explore the series</span>
          </a>

          {/* News Link */}
          <a
            href="/news"
            class="group flex flex-col items-center rounded-lg border border-border bg-background p-6 transition-all duration-300 hover:border-accent hover:shadow-lg focus-outline"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-accent transition-transform group-hover:scale-110"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
              ></path>
            </svg>
            <span class="mt-3 font-semibold">News</span>
            <span class="mt-1 text-center text-sm text-muted">Latest updates</span>
          </a>

          {/* About Link */}
          <a
            href="/about"
            class="group flex flex-col items-center rounded-lg border border-border bg-background p-6 transition-all duration-300 hover:border-accent hover:shadow-lg focus-outline"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-accent transition-transform group-hover:scale-110"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
            <span class="mt-3 font-semibold">About</span>
            <span class="mt-1 text-center text-sm text-muted">Meet the author</span>
          </a>
        </div>
      </div>

      {/* Alternative Link */}
      <p class="mt-8 text-center text-sm text-muted">
        Or <LinkButton
          href="/"
          class="text-accent underline decoration-dashed underline-offset-4 hover:text-accent-secondary"
        >
          return to the homepage
        </LinkButton>
      </p>
    </div>
  </main>

  <Footer />
</Layout>
